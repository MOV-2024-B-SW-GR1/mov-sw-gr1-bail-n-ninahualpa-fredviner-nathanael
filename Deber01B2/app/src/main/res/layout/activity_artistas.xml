<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Artistas">

    <!-- Título TIENDAS -->

    <!-- Botón CREAR -->

    <!-- RecyclerView para la lista de tiendas -->

    <TextView
        android:id="@+id/tvArtistas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="ARTISTAS"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnIrCrearArtistas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:text="CREAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/lv_lista_artistas"
        app:layout_constraintStart_toStartOf="@+id/lv_lista_artistas"
        app:layout_constraintTop_toBottomOf="@+id/lv_lista_artistas" />

    <ListView
        android:id="@+id/lv_lista_artistas"
        android:layout_width="267dp"
        android:layout_height="501dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="@+id/tvArtistas"
        app:layout_constraintStart_toStartOf="@+id/tvArtistas"
        app:layout_constraintTop_toBottomOf="@+id/tvArtistas" />

</androidx.constraintlayout.widget.ConstraintLayout>