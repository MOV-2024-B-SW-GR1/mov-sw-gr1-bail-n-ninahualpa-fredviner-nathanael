<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdministrarCanciones">

    <TextView
        android:id="@+id/tv_CrearCanciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="CREAR CANCIONES"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etTituloCanciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="text"
        android:text="Titulo"
        app:layout_constraintEnd_toEndOf="@+id/tv_CrearCanciones"
        app:layout_constraintStart_toStartOf="@+id/tv_CrearCanciones"
        app:layout_constraintTop_toBottomOf="@+id/tv_CrearCanciones" />

    <EditText
        android:id="@+id/etDuracionCanciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:inputType="text"
        android:text="Duracion(00.00)"
        app:layout_constraintEnd_toEndOf="@+id/etTituloCanciones"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/etTituloCanciones"
        app:layout_constraintTop_toBottomOf="@+id/etTituloCanciones" />

    <Button
        android:id="@+id/btnCrearCanciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/etFechaCanciones"
        app:layout_constraintStart_toStartOf="@+id/etFechaCanciones"
        app:layout_constraintTop_toBottomOf="@+id/etFechaCanciones"
        app:layout_constraintVertical_bias="0.208" />

    <EditText
        android:id="@+id/etFechaCanciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="date"
        android:text="(dd/mm/yyyy)"
        app:layout_constraintEnd_toEndOf="@+id/etDuracionCanciones"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etDuracionCanciones"
        app:layout_constraintTop_toBottomOf="@+id/etDuracionCanciones" />
</androidx.constraintlayout.widget.ConstraintLayout>