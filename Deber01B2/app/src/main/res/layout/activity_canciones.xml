<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Canciones">

    <!-- Título PRODUCTOS -->

    <!-- Botón CREAR PRODUCTO -->

    <TextView
        android:id="@+id/tvCanciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="CANCIONES"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnIrCrearCanciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:text="CREAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/lv_canciones"
        app:layout_constraintStart_toStartOf="@+id/lv_canciones"
        app:layout_constraintTop_toBottomOf="@+id/lv_canciones" />

    <ListView
        android:id="@+id/lv_canciones"
        android:layout_width="277dp"
        android:layout_height="518dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/tvCanciones"
        app:layout_constraintStart_toStartOf="@+id/tvCanciones"
        app:layout_constraintTop_toBottomOf="@+id/tvCanciones" />

    <!-- RecyclerView para la lista de productos -->


</androidx.constraintlayout.widget.ConstraintLayout>